<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<% @pokemons.each do |pokemon| %>
  <%= pokemon.name %>, Level <%= pokemon.level %>, HP <%= pokemon.hp %> <%= link_to "Damage!", damage_path(id: pokemon), :class => "button medium", :method => :patch %>
  </br>
<% end %>
<% if @trainer == current_trainer%>
<%=link_to "Create New Pokemon!", new_path, :class => "button medium", :method => :get %>
<% end %>
